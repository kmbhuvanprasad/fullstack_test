
<%if session[:user_id]==@event.owner_id.to_i%>
<%= form_for :event, url: event_update_path(@event), method: :patch do |f| %>

<p>
	<%= f.label :event_name %>
    <%= f.text_field :event_name %>
<p>
	 <%= f.label :venue %>
     <%= f.text_field :venue %>
</p>
<p>
	<%= f.label :date %>
    <%= f.date_field :date %>
</p>
<p>
	<%= f.label :time %>
    <%= f.time_field :time %>
<p>
	 <%= f.label :description %>
     <%= f.text_area :description %>
</p>
<p>
	<%= f.label :invited %>
    <%= f.text_area :invited %>'
</p>
<p>
      <%= f.label :status %>
      <%=f.select :status, [['Open','open'],['Close','close']]%><br>
</p>
<%= f.submit "Create my event", class: "btn btn-large btn-primary" %>
<% end %>

<% end %>	  
    